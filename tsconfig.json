{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "build",
    "jsx": "react",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es5"
    // "typeRoots": ["./node_modules/@types", "@types"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx",
    "**/*.md"
  ]
}
